{
  "hooks": [
    {
      "id": "progress-tracking",
      "event": "command-executed",
      "trigger": ["explore", "assess", "plan", "projects"],
      "action": "track-user-journey",
      "description": "Track user's learning journey and engagement",
      "enabled": true
    },
    {
      "id": "skill-assessment-milestone",
      "event": "assessment-completed",
      "trigger": "assess",
      "action": "create-milestone",
      "description": "Create milestone when assessment is completed",
      "enabled": true
    },
    {
      "id": "learning-path-validation",
      "event": "plan-created",
      "trigger": "plan",
      "action": "validate-prerequisites",
      "description": "Validate that user meets prerequisites for learning path",
      "enabled": true
    },
    {
      "id": "project-progress-tracker",
      "event": "project-started",
      "trigger": "projects",
      "action": "monitor-progress",
      "description": "Track project completion and learning progress",
      "enabled": true
    },
    {
      "id": "achievement-notification",
      "event": "milestone-reached",
      "trigger": ["progress-reached", "project-completed"],
      "action": "notify-achievement",
      "description": "Notify user of achievements and celebrate progress",
      "enabled": true
    },
    {
      "id": "agent-contextual-loading",
      "event": "command-context",
      "trigger": ["*"],
      "action": "load-relevant-agent",
      "description": "Automatically load relevant agent based on context",
      "enabled": true,
      "rules": {
        "explore": "career-path-advisor",
        "assess": "skill-assessment-expert",
        "plan": "learning-path-designer",
        "projects": "project-mentor"
      }
    },
    {
      "id": "skill-activation",
      "event": "agent-invoked",
      "trigger": ["*"],
      "action": "activate-relevant-skills",
      "description": "Load relevant skills based on agent and context",
      "enabled": true,
      "skill-mapping": {
        "career-path-advisor": ["specializations", "soft-skills"],
        "skill-assessment-expert": ["programming-languages", "frameworks-tools", "specializations"],
        "learning-path-designer": ["programming-languages", "frameworks-tools", "databases-infrastructure", "devops-cloud"],
        "project-mentor": ["programming-languages", "frameworks-tools", "databases-infrastructure"],
        "community-guide": ["soft-skills"],
        "progress-tracker": ["specializations"],
        "interview-preparer": ["interview-skills", "soft-skills"]
      }
    },
    {
      "id": "engagement-reminder",
      "event": "inactive-user",
      "trigger": "7-days-inactive",
      "action": "send-motivation",
      "description": "Send motivational message after 7 days of inactivity",
      "enabled": true
    },
    {
      "id": "weekly-summary",
      "event": "weekly-check",
      "trigger": "every-sunday",
      "action": "generate-summary",
      "description": "Generate weekly learning summary and progress report",
      "enabled": true
    },
    {
      "id": "goal-deadline-reminder",
      "event": "deadline-approaching",
      "trigger": "milestone-due-soon",
      "action": "remind-deadline",
      "description": "Remind user of approaching learning milestone deadlines",
      "enabled": true
    }
  ],
  "automation": {
    "enabled": true,
    "features": {
      "auto-suggest-next-step": {
        "enabled": true,
        "description": "Automatically suggest next learning step"
      },
      "progress-monitoring": {
        "enabled": true,
        "interval": "daily",
        "description": "Monitor and track daily progress"
      },
      "personalized-recommendations": {
        "enabled": true,
        "interval": "weekly",
        "description": "Provide weekly personalized recommendations"
      },
      "community-notifications": {
        "enabled": true,
        "description": "Notify about community resources and events"
      }
    }
  },
  "notifications": {
    "enabled": true,
    "types": {
      "achievement": "Celebrate milestones and achievements",
      "reminder": "Remind about deadlines and goals",
      "suggestion": "Suggest next steps and resources",
      "community": "Share community insights and opportunities",
      "alert": "Alert about important updates"
    }
  },
  "tracking": {
    "enabled": true,
    "metrics": [
      "commands-executed",
      "agents-invoked",
      "skills-activated",
      "learning-time",
      "projects-started",
      "projects-completed",
      "assessments-taken",
      "paths-created",
      "milestones-reached"
    ]
  }
}
